generator client {
  provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  name     String?
  posts    Post[]
  likes    PostLike[]
}



model Post {
  id        String    @id @default(cuid())
  content   String
  userId    String

  imagePath String?  
  date      DateTime  @default(now())


  user      User      @relation(fields: [userId], references: [id])
  likes     PostLike[]

  @@index([userId])
}

model PostLike {
  id     String @id @default(cuid())
  userId String
  postId String
  user   User   @relation(fields: [userId], references: [id])
  post   Post   @relation(fields: [postId], references: [id])

  @@unique([userId, postId])
}