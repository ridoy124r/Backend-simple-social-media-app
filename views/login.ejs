<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: linear-gradient(135deg, #1e1b4b 0%, #4c1d95 25%, #6b21a8 50%, #7c3aed 75%, #8b5cf6 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .scene-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: 0;
    }
    
    .mountain {
      position: absolute;
      bottom: 0;
    }
    
    .mountain-back {
      left: 20%;
      width: 0;
      height: 0;
      border-left: 150px solid transparent;
      border-right: 150px solid transparent;
      border-bottom: 250px solid rgba(76, 29, 149, 0.5);
      filter: blur(2px);
    }
    
    .mountain-mid {
      left: 10%;
      width: 0;
      height: 0;
      border-left: 200px solid transparent;
      border-right: 200px solid transparent;
      border-bottom: 350px solid rgba(88, 28, 135, 0.7);
    }
    
    .mountain-front {
      right: 15%;
      width: 0;
      height: 0;
      border-left: 180px solid transparent;
      border-right: 180px solid transparent;
      border-bottom: 320px solid rgba(59, 7, 100, 0.8);
    }
    
    .tree {
      position: absolute;
      bottom: 50px;
    }
    
    .tree-left {
      left: 25%;
      width: 0;
      height: 0;
      border-left: 30px solid transparent;
      border-right: 30px solid transparent;
      border-bottom: 80px solid rgba(6, 78, 59, 0.9);
    }
    
    .tree-right {
      right: 30%;
      width: 0;
      height: 0;
      border-left: 25px solid transparent;
      border-right: 25px solid transparent;
      border-bottom: 70px solid rgba(6, 95, 70, 0.9);
    }
    
    .cloud {
      position: absolute;
      background: rgba(167, 139, 250, 0.3);
      border-radius: 100px;
      animation: float 20s infinite ease-in-out;
    }
    
    .cloud-1 {
      top: 10%;
      left: 10%;
      width: 120px;
      height: 40px;
      animation-delay: 0s;
    }
    
    .cloud-2 {
      top: 20%;
      right: 15%;
      width: 100px;
      height: 35px;
      animation-delay: 7s;
    }
    
    .cloud-3 {
      top: 30%;
      left: 60%;
      width: 90px;
      height: 30px;
      animation-delay: 14s;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }
    
    .login-card {
      backdrop-filter: blur(20px);
      background: rgba(167, 139, 250, 0.15);
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }
    
    .input-field {
      background: rgba(255, 255, 255, 0.1);
      border: none;
      border-bottom: 2px solid rgba(255, 255, 255, 0.5);
      transition: all 0.3s ease;
    }
    
    .input-field:focus {
      background: rgba(255, 255, 255, 0.15);
      border-bottom-color: #fff;
      outline: none;
    }
    
    .login-btn {
      background: rgba(255, 255, 255, 0.9);
      transition: all 0.3s ease;
    }
    
    .login-btn:hover {
      background: rgba(255, 255, 255, 1);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }
  </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
  
  <!-- 3D Scene Background -->
  <div class="scene-container">
    <div class="cloud cloud-1"></div>
    <div class="cloud cloud-2"></div>
    <div class="cloud cloud-3"></div>
    
    <div class="mountain mountain-back"></div>
    <div class="mountain mountain-mid"></div>
    <div class="mountain mountain-front"></div>
    
    <div class="tree tree-left"></div>
    <div class="tree tree-right"></div>
  </div>

  <!-- Login Card -->
  <div class="login-card rounded-3xl p-8 w-full max-w-md relative z-10">
    <h1 class="text-4xl font-bold text-white text-center mb-8">Login</h1>
    
    <form method="POST" action="/login" class="space-y-6">
      <!-- Email Field -->
      <div>
        <label class="block text-white text-sm mb-2">Email</label>
        <input 
          type="email" 
          name="email" 
          placeholder="" 
          required 
          class="input-field w-full px-4 py-3 text-white placeholder-gray-300 rounded-lg"
        />
      </div>
      
      <!-- Password Field -->
      <div>
        <label class="block text-white text-sm mb-2">Password</label>
        <input 
          type="password" 
          name="password" 
          placeholder="" 
          required 
          class="input-field w-full px-4 py-3 text-white placeholder-gray-300 rounded-lg"
        />
      </div>
      
      <!-- Remember Me & Forgot Password -->
      <div class="flex items-center justify-between text-sm">
        <label class="flex items-center text-white cursor-pointer">
          <input type="checkbox" name="remember" class="mr-2 w-4 h-4" />
          Remember Me
        </label>
        <a href="/forgot-password" class="text-white hover:underline">Forget Password</a>
      </div>
      
      <!-- Login Button -->
      <button 
        type="submit" 
        class="login-btn w-full py-3 rounded-full text-purple-900 font-semibold text-lg"
      >
        Log in
      </button>
      
      <!-- Register Link -->
      <p class="text-center text-white text-sm mt-4">
        Don't have a account? <a href="/register" class="font-semibold hover:underline">Register</a>
      </p>
    </form>
  </div>

</body>
</html>